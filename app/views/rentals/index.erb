<h1 style="text-align:center">All Rentals</h1>

<style>

table, th, td {
  border: 1px solid white;
}

table.center {
  margin-left: auto;
  margin-right: auto;
}

.topnav a {
  float: left;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav {
  background-color: yellow;
  overflow: hidden;
}

.topnav a:hover {
  background-color: yellow;
  color: black;
}

.topnav a.active {
  background-color: white;
  color: black;
}

h1 {
  color: yellow;
}

body {
  background-color: blue;
  color: white;
}

 a:link {
  color: white;
}

a:visited {
  color: black;
}

</style>

<div class="topnav">
  <a class="active" href="/">Home</a>
  <a href="/rentals/new">New Rental</a>
  <a href="/rentals">All Rentals</a>
  <a href="/customers/new">New Customer</a>
  <a href="/customers">All Customers</a>
  <a href="/movies/new">New Movie</a>
  <a href="/movies">All Movies</a>
</div><br>

<table class="center">
  <tr>
    <th>Customer</th>
    <th>Movie</th>
    <th>Return Status</th>
    <th>Checkout Date-Time</th>
    <th>Show Rental</th>
  </tr>
  <% @rentals.each do |rental| %>
  <tr>
    <td><a href='/customers/<%=rental.customer.slug%>'><%=rental.customer.name%></a></td>
    <td><a href='/movies/<%=rental.movie.slug%>'><%=rental.movie.name%></a></td>
    <td><%=rental.returned%></td>
    <td><%=rental.created_at%></td>
    <td><a href='/rentals/<%=rental.id%>'><button type='button'>Rental Details</button></a></td>
  </tr>
  <% end %>
</table>